@page
@model MoviePediaCore.Pages.Movies.ListModel
@{
}

<h2>Movies</h2>

<form>
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm" />
        </div>
        <span>
            <button class="btn btn-secondary" type="button">
                <i class="fa fa-search"></i>
            </button>
        </span>
    </div>
</form>

<table class="table table-dark">
    @foreach (var movie in Model.Movies)
    {
        <tr>
            <td>@movie.Name</td>
            <td>@movie.YearOfRelease</td>
            <td>
                <a class="btn btn-lg" asp-page="./Detail" asp-route-movieId="@movie.Id">
                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-info-circle-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412l-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM8 5.5a1 1 0 1 0 0-2 1 1 0 0 0 0 2z" />
                    </svg>
                </a>
                <a class="btn btn-lg" asp-page="./Edit" asp-route-movieId="@movie.Id">
                    <i class="fa fa-edit"></i>
                </a>
                <a class="btn btn-lg" asp-page="./Delete" asp-route-movieId="@movie.Id">
                    <i class="fa fa-trash"></i>
                </a>
            </td>
        </tr>
    }
</table>
